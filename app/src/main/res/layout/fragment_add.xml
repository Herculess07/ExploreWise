<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFragmentAdd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BottomNavFragments.AddFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarFamousOfCity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0CF3E1"
        app:titleTextColor="@color/textColorPrimary"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="Add Item" />

    <Button
        android:id="@+id/btnAddPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:text="Add Famous Place"
        android:textColor="@color/textColorPrimary"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnAddDevotionalPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:text="Add Devotional Place"
        android:textColor="@color/textColorPrimary"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnAddFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:text="Add Famous Food"
        android:textColor="@color/textColorPrimary"
        android:textSize="22sp" />


</FrameLayout>