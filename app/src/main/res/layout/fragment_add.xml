<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layoutFragmentAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_24sdp"
        app:cardElevation="@dimen/_5sdp"
        app:strokeWidth="0dp"
        tools:context=".BottomNavFragments.AddFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_15sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llAddPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_place_24"
                    app:tint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/btnAddPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:text="@string/add_famous_place"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="#CCCCCC" />

            <LinearLayout
                android:id="@+id/llAddDevotionalPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/temple"
                    app:tint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/btnAddDevotionalPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:text="@string/add_devotional_place"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="#CCCCCC" />

            <LinearLayout
                android:id="@+id/llAddFamousFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_fastfood_24"
                    app:tint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/btnAddFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:text="@string/add_famous_food"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="#CCCCCC" />-->
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>