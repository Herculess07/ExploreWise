<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageViewHomeDesign"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_food_image" />

        <TextView
            android:id="@+id/textViewHomeDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="23dp"
            android:text="McDonald's"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/descriptionHomeDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/featured_locations_descriptions"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp" />

