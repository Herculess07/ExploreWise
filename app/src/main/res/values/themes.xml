<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Food1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Theme.Food1.Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="android:textColorSecondary">@color/textColorPrimaryDark</item>
    </style>


<!--    container with error enabled style-->
    <style name="container_err" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="errorEnabled">true</item>
        <item name="helperText">@string/required</item>
        <item name="helperTextTextColor">@color/design_default_color_error</item>
    </style>

    <!--    container with error enabled style-->
    <style name="container_err_2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_weight">1</item>

        <item name="helperText">@string/required</item>
        <item name="helperTextTextColor">@color/design_default_color_error</item>
    </style>


    <!--    container without error enabled style-->
    <style name="container" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

<!--    basic view style-->
    <style name="basic_view" parent="MaterialAlertDialog.Material3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

<!--    basic button style-->
    <style name="button" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginHorizontal">5dp</item>
    </style>

    <style name="button2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>

    </style>

</resources>
